<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
    android:id="@+id/love_dialog_message"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:textAlignment="center"
    android:text="@string/love_dialog_content"
    android:textStyle="bold"
    android:textSize="24sp"/>

<Button
    android:id="@+id/love_dialog_yes"
    style="@style/appiratorButton"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:text="@string/love_dialog_yes"
    android:textStyle="bold"/>

<Button
    android:id="@+id/love_dialog_no"
    style="@style/appiratorButton"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:text="@string/love_dialog_no"
    android:textStyle="bold"/>

</LinearLayout>
